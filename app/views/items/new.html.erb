<h1 class="text-center">Add New Item</h1>
<div id="new-item-form">
  <%= form_for [@list, @item] do |form| %>
    <div class="form-label"><%= form.label :item_name, "Item Name" %></div>
    <div class="form-input"><%= form.text_field :item_name, placeholder: "Item Name" %></div>

    <div class="form-label"><%= form.label :category, "Category" %></div>
    <div class="form-input"><%= form.collection_select :category, Item::CATEGORIES, :to_s, :to_s,
         :include_blank => true %></div>

    <%= form.submit "+ Add", class: "btn btn-primary btn-md" %>
  <% end %>
</div>
